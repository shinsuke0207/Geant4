TARGET = delta
 
SRCS = $(TARGET).cc
OBJS = $(TARGET).o
 
ROOTCFLAGS = $(shell root-config --cflags)
ROOTLIBS   = $(shell root-config --libs)
ROOTGLIBS = $(shell root-config --glibs)

OPTION = $(shell -std=c++11 -stdlib=libc++)
 
CXXFLAGS   = $(ROOTCFLAGS) -Wall -fPIC
CXXLIBS    = $(ROOTLIBS)
CC = clang++

STD = $(OPTION)

$(TARGET): $(OBJS)
	$(CC) $(CXXLIBS) $(OBJS) $(STD) -o $@
 
# suffix rule
.cc.o:
	$(CC) $(CXXFLAGS) -c $<
 
# clean
clean:
	rm -f $(TARGET) $(OBJS)